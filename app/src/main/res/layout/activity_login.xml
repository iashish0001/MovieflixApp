<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".LoginActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/editTxtEmail"
        android:inputType="textEmailAddress"
        style="@style/sign_in"
        android:paddingTop="2pt"
        android:hint="EmailId"
        android:alpha=".7"
        android:layout_width="284dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="63dp"
        android:layout_marginTop="245dp"
        android:background="@drawable/edit_txt_background"
        android:drawableLeft="@drawable/baseline_account_circle_black_18dp"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp" />

    <TextView
        android:id="@+id/editTextPass"
        android:layout_width="284dp"
        android:inputType="textPassword"
        android:layout_height="41dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="63dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="326dp"
        android:background="@drawable/edit_txt_background"
        android:alpha=".7"
        android:drawableLeft="@drawable/baseline_lock_black_18dp"
        android:drawablePadding="10dp"
        android:paddingLeft="10dp"
        android:hint="Password"
        style="@style/sign_in"
        android:paddingTop="2pt" />

    <Button
        android:id="@+id/btnSignIn2"
        android:layout_width="226dp"
        android:layout_height="51dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="93dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="408dp"
        android:background="@drawable/sign_in_"
        android:elevation="4dp"
        android:text="@string/sign_in"
        style="@style/sign_in" />

</RelativeLayout>
